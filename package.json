{
  "name": "my-generic-game",
  "license": "MIT",
  "scripts": {
    "compile:css": "postcss src/style.css -o dist/styles.css",
    "compile:typescript": "tsc --build",
    "copy:html": "cp src/index.html dist/",
    "watch:html": "copy-and-watch src/*.html dist/ --watch",
    "watch:css": "yarn compile:css --watch",
    "build": "yarn compile:typescript && yarn compile:css && yarn copy:html",
    "dev": "yarn build && yarn watch:html & live-server dist --port=4200"
  },
  "dependencies": {},
  "devDependencies": {
    "copy-and-watch": "^0.1.6",
    "autoprefixer": "^10.4.13",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.5"
  }
}
